{
  "compilerOptions": {
    "outDir": "build",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true
  },
  "include": [
    "src/**/**.ts",
    "src/**/**.js",
    "src/**/**.json",
    "test/**/**.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
